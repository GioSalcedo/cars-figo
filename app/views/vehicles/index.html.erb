<%= render "shared/search" %>
<%= render "shared/ride" %>

<section class="services" id="services">
  <div class="heading">
    <span>Lo mejor de nosotros</span>
      <h1>Mira los vehiculos que tenemos para ti <br> De las mejores marcas </h1>
  </div>

<div class="services-container">
  <% @vehicles.each do |vehicle| %>
    <div class="box">
    <div class="box-img">
      <%= image_tag("lacross.webp") %>
    </div>
        <h2>- <%= vehicle.brand %></h2>
        <h2><%= link_to vehicle.model, vehicle %></h2>
        <p><%= vehicle.year %></p>
        <h2>$<%= vehicle.price%> /mes</h2>
    </div>
    <% end %>
  </div>
</div>

</section>

<%= render "shared/about" %>
<%= render "shared/newsletter" %>
