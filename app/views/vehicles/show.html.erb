<section id="vehicle">
<div class="car-title">
  <h1><%= @vehicle.model %> | <%= @vehicle.brand %></h1>
</div>

<div class="car-img">
    <%= image_tag("lacross.webp") %>
  <div class="details">
    <div class="all-details">
      <div class="box">
        <p>Modelo: <%= @vehicle.year %></p>
        <p>Tipo de vehiculo: <%= @vehicle.type_car %></p>
        <p>Capacidad: <%= @vehicle.passangers %> pasajeros</p>
        <p>Precio: $<%= @vehicle.price %> / mes</p>
        <p>Capacidad del maletero: <%= @vehicle.suitcase_capacity %> dl</p>
        <p>Tipo de caja de cambios: <%= @vehicle.gearbox %></p>
      </div>
    </div>
  </div>
</div>


<div class="btn-reserve">
<div class="action-btn">
  <%= link_to "Regresar", vehicles_path, class: "sign-in" %>
</div>
<div class="action-btn">
  <%= link_to "Reservar ahora", new_vehicle_booking_path(@vehicle), class: "sign-in" %>
</div>
</div>
</section>
